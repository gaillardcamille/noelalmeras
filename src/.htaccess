RewriteEngine on

# Si l'url n'as pas d'extention, la completer par completer par .php
RewriteRule ^([a-zA-Z_]+(\/[a-zA-Z_]+)*)$ $1.php

ErrorDocument 404 /404error.php
ErrorDocument 500 /404error.php?error=500
ErrorDocument 400 /404error.php?error=400
ErrorDocument 401 /404error.php?error=401
ErrorDocument 403 /404error.php?error=403